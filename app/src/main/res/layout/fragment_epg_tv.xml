<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EpgTvFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- TODO: Update blank fragment layout -->
            <TextView
                android:id="@+id/tv_fragment_epg_tv_cro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hrvatski tv kanali:" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_cro_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />

            <TextView
                android:id="@+id/text_view_fragment_epg_tv_other_channels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Drugi kanali:" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_other_channels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>