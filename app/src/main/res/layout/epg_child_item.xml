<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout"
    android:layout_width="wrap_content"
    android:layout_height="145dp"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="143dp"
        android:layout_alignStart="@+id/tv_epg_tv_child_title"
        android:layout_alignEnd="@+id/tv_epg_tv_child_title"
        android:progressDrawable="@drawable/progress_background"
        android:max="100"
        android:progress="0" />
    <TextView
        android:id="@+id/tv_epg_tv_child_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:padding="5dp"
        android:text="position"/>
    <TextView
        android:id="@+id/tv_epg_tv_child_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_epg_tv_child_position"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:padding="5dp"
        android:background="@drawable/back"
        android:text="10-22"/>
    <TextView
        android:id="@+id/tv_epg_tv_child_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_epg_tv_child_start"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:background="#00000000"
        android:padding="5dp"
        android:minWidth="100dp"
        android:maxWidth="300dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="description"/>

    <TextView
        android:id="@+id/tv_epg_tv_child_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_epg_tv_child_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:background="#00000000"
        android:layout_alignStart="@+id/tv_epg_tv_child_title"
        android:layout_alignEnd="@+id/tv_epg_tv_child_title"
        android:padding="5dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:maxWidth = "150dp"
        android:text="category"/>


</RelativeLayout>