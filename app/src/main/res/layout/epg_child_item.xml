<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout"
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/child_item_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_alignStart="@+id/tv_epg_tv_child_title"
        android:layout_alignEnd="@+id/tv_epg_tv_child_title"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/progress_background" />

    <TextView
        android:id="@+id/tv_epg_tv_child_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@drawable/back"
        android:padding="5dp"
        android:text="10-22"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/primaryText" />

    <TextView
        android:id="@+id/tv_epg_tv_child_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_epg_tv_child_start"
        android:background="#00000000"
        android:ellipsize="end"
        android:maxWidth="300dp"
        android:maxLines="1"
        android:minWidth="100dp"
        android:padding="5dp"
        android:text="description"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/primaryText" />

