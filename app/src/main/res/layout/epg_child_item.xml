<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout"
    android:layout_width="wrap_content"
    android:layout_height="130dp"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_alignStart="@+id/tv_epg_tv_child_title"
        android:layout_alignEnd="@+id/tv_epg_tv_child_title"
        android:progressDrawable="@drawable/progress_background"
        android:max="100"
        android:progress="0" />

    <TextView
        android:id="@+id/tv_epg_tv_child_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:padding="5dp"
        android:textColor="@color/white"
        android:background="@drawable/back"
        android:text="10-22"/>
    <TextView
        android:id="@+id/tv_epg_tv_child_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_epg_tv_child_start"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:background="#00000000"
        android:padding="5dp"
        android:minWidth="100dp"
        android:maxWidth="300dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:text="description"/>

    <TextView
        android:id="@+id/tv_epg_tv_child_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_epg_tv_child_title"
        android:layout_alignStart="@+id/tv_epg_tv_child_title"
        android:layout_alignEnd="@+id/tv_epg_tv_child_title"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:ellipsize="end"
        android:maxWidth="150dp"
        android:maxLines="3"
        android:padding="5dp"
        android:textColor="@color/white"
        android:text="category"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />


</RelativeLayout>