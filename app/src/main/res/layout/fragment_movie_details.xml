<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray">

    <RelativeLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/poster_image_view"
        android:clipToPadding="false"
        android:scrollbars="none">


    <ImageView
        android:id="@+id/cover_image_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/poster_image_view"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginTop="-100dp"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/cover_image_view"
        android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Movie Title"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:layout_toEndOf="@+id/poster_image_view"
            android:layout_below="@+id/cover_image_view"
            android:textColor="@color/primaryText"
            android:layout_marginStart="10dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/release_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2021"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:layout_below="@+id/title"
            android:layout_toEndOf="@+id/poster_image_view"
            android:textColor="@color/primaryText"
            android:layout_marginStart="10dp"
           />

        <TextView
            android:id="@+id/imdb_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="imbd rating"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="Imdb rating"
            android:drawableLeft="@drawable/imdb_logo"
            android:drawablePadding="10dp"
            android:layout_below="@+id/poster_image_view"
            android:textColor="@color/primaryText"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/rotten_tomatoes_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="rotten rating"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:drawableLeft="@drawable/rotten_tomatoes_logo"
            android:drawablePadding="10dp"
            android:layout_below="@+id/poster_image_view"
            android:layout_toRightOf="@+id/imdb_rating"
            android:textColor="@color/primaryText"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/tmdb_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="tmbd rating"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:drawableLeft="@drawable/tmbd_logo"
            android:drawablePadding="10dp"
            android:layout_below="@+id/imdb_rating"
            android:textColor="@color/primaryText"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/metacritic_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="metacritic rating"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:drawableLeft="@drawable/metacritic_logo"
            android:drawablePadding="10dp"
            android:layout_below="@+id/rotten_tomatoes_rating"
            android:layout_toRightOf="@+id/tmdb_rating"
            android:textColor="@color/primaryText"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />



        <LinearLayout
            android:id="@+id/details_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tmdb_rating"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/white"
               >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/dark_gray">



                    <TextView
                        android:id="@+id/releaseDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_calendar"
                        android:drawablePadding="16dp"
                        android:minHeight="48dp" />

                    <LinearLayout
                        android:id="@+id/overview_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/HeaderTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="overview" />

                        <TextView
                            android:id="@+id/overview"
                            style="@style/DetailField"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:background="@color/grey" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cast_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/card_view"
                android:background="@color/grey" />
        </LinearLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/details_linear_layout"
            android:background="@color/grey" />


        <TextView
            android:id="@+id/trailers_static_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider3"
            android:textColor="@color/white"
            android:text="Traileri:" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/youtube_recycler_view"
            android:layout_below="@+id/trailers_static_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
