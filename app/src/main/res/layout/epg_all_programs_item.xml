<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_epg_all_programs_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:padding="5dp"
        android:text="position"/>
    <TextView
        android:id="@+id/tv_epg_all_programs_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_epg_all_programs_position"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:background="#00000000"
        android:padding="5dp"
        android:text="10-22"/>
    <TextView
        android:id="@+id/tv_epg_all_programs_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_epg_all_programs_start"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:background="#00000000"
        android:padding="5dp"
        android:text="Hello World"/>




</RelativeLayout>