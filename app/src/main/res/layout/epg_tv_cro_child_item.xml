<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/tv_epg_tv_child_description"
        android:layout_alignRight="@+id/tv_epg_tv_child_description"
        android:progressDrawable="@drawable/progress_background"
        android:max="100"
        android:progress="0" />
    <TextView
        android:id="@+id/tv_epg_tv_child_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:padding="5dp"
        android:text="position"/>
    <TextView
        android:id="@+id/tv_epg_tv_child_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_epg_tv_child_position"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:background="#00000000"
        android:padding="5dp"
        android:text="10-22"/>
    <TextView
        android:id="@+id/tv_epg_tv_child_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_epg_tv_child_start"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:background="#00000000"
        android:padding="5dp"
        android:text="Hello World"/>




</RelativeLayout>